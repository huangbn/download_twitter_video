{
  "name": "下载 Twitter 视频",
  "description" : "下载 Twitter 里的视频",
  "version": "1.0",
  "browser_action": {
    "default_popup": "twitter.html",
    "default_icon": "img/icon.png"
  },
  "icons": {
    "16": "img/icon.png",
    "32": "img/icon.png",
    "64": "img/icon.png",
    "128": "img/icon.png"
  },
  "background": {
    "scripts": ["js/background.js"],
    "persistent": true
  },
  "content_scripts":[
    {
      "matches": ["https://*/*"],
      "js": ["js/main.js"]
    }
  ],
  "permissions": [
    "debugger",
    "webRequest",
    "webRequestBlocking",
    "cookies",
    "https://*/*",
    "http://*/*"
  ],
  "manifest_version": 2,
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+F",
        "mac": "MacCtrl+Shift+F"
      },
      "description": "打开 cookies.html"
    }
  }
}
